{
  "name": "legio-scraper",
  "version": "1.0.1",
  "type": "module",
  "module": "index.ts",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "deploy": "tar -cvf ./deploy.tar --exclude='node_modules' --exclude='src/cli.ts' --exclude='dist' * && caprover deploy -t ./deploy.tar -n legio -a scraper && rm ./deploy.tar",
    "deploy-qc": "tar -cvf ./deploy.tar --exclude='node_modules' * && caprover deploy -t ./deploy.tar -n legio -a scraper-qc && rm ./deploy.tar",
    "prod": "bun src/index.ts",
    "cli": "bun src/cli.ts"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-validator": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/nodemailer": "^6.4.4",
    "@types/node-cron": "^3.0.1",
    "@types/puppeteer": "^5.4.6",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "body-parser": "1.20.2",
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "express": "4.18.2",
    "express-async-errors": "^3.1.1",
    "express-validator": "7.0.1",
    "puppeteer": "21.1.1"
  }
}
